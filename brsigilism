        <script>
            document.getElementById("channel").addEventListener("click", function () {
                const channelex = document.getElementById("channelex");
                if (channelex.style.display === "none" || channelex.style.display === "") {
                    channelex.style.display = "block";
                } else {
                    channelex.style.display = "none";
                }
            });
            document.getElementById("Antecedent").addEventListener("click", function () {
                const Antecedentex = document.getElementById("Antecedentex");
                if (Antecedentex.style.display === "none" || Antecedentex.style.display === "") {
                    Antecedentex.style.display = "block";
                } else {
                    Antecedentex.style.display = "none";
                }
            });
            document.getElementById("Intention").addEventListener("click", function () {
                const Intentionex = document.getElementById("Intentionex");
                if (Intentionex.style.display === "none" || Intentionex.style.display === "") {
                    Intentionex.style.display = "block";
                } else {
                    Intentionex.style.display = "none";
                }
            });
        </script>
